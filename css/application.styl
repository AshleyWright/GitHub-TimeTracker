:root {
	box-sizing: border-box;
	font-size: calc(100% + 1vw);
	line-height: 1.1;
}

* {
	box-sizing: inherit;
}

body {
	display: flex;
	flex-direction: column;
	height: 100vh;
	margin: 0;
}

.main-frame {
	display: flex;
	flex: 1;
}

.time-tracker-panel,
.detail-panel {
	flex: 1;
}
.time-tracker-panel {
	border-right: solid 1px #e5e5e5;
}

.time-tracker-panel {
	display: flex;
	flex-direction: column;
}

.context-bar,
.filter-bar {
	background: #f5f5f5;
	border-bottom: 1px solid #e5e5e5;
	height: 2rem;
	line-height: 1.5rem;
	overflow: hidden;
	padding: .25rem 1rem;
	select {
		background: linear-gradient(#fcfcfc, #eee) #eee;
		border: 1px solid #d5d5d5;
		border-radius: 3px;
		color: #333;
		&:hover, &:active {
			background: linear-gradient(#eee, #ddd) #ddd;
			border-color: #ccc;
		}
		option {
			background: #fff;
		}
	}
	.presentational-slash {
		color: #fff;
		font-size: 1.1em;
		line-height: calc(1 / 1.1);
		text-shadow: 0 0 1px #999;
	}
}
.filter-bar {
	background: #fff;
}

.avatar {
	vertical-align: top;
	width: 1.5rem;
	mix-blend-mode: multiply;
}
[id="scope-image"] {
	display: none;
}

select {
	font-size: .8rem;
	vertical-align: text-bottom;
}

[id="loading"] {
	background: #000;
	bottom: 0;
	left: 0;
	opacity: 0;
	pointer-events: none;
	position: absolute;
	right: 0;
	top: 0;
	transition: opacity ease .3s .2s;
}
.loading [id="loading"] {
	opacity: .5;
	pointer-events: all;
}