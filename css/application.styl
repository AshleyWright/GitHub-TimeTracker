:root {
	box-sizing: border-box;
	font-size: calc(100% + 1vw);
	line-height: 1.1;
	font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",  "Fira Sans", "Droid Sans", "Helvetica Neue",  sans-serif
}

* {
	box-sizing: inherit;
}

body {
	display: flex;
	flex-direction: column;
	height: 100vh;
	margin: 0;
}

.main-frame {
	display: flex;
	flex: 1;
}

.time-tracker-panel,
.detail-panel {
	flex: 1;
}
.time-tracker-panel {
	border-right: solid 1px #e5e5e5;
}

.time-tracker-panel {
	display: flex;
	flex-direction: column;
}

header,
.filter-bar {
	background: #f5f5f5;
	border-bottom: 1px solid #e5e5e5;
	height: 2rem;
	line-height: 1.5rem;
	overflow: hidden;
	padding: .25rem 1rem;
	select {
		background: linear-gradient(#fcfcfc, #eee) #eee;
		border-radius: 3px;
		border: 1px solid #d5d5d5;
		color: #333;
		&:hover, &:active {
			background: linear-gradient(#eee, #ddd) #ddd;
			border-color: #ccc;
		}
		option {
			background: #fff;
		}
	}
	.presentational-slash {
		color: #fff;
		font-size: 1.1em;
		line-height: calc(1 / 1.1);
		text-shadow: 0 0 1px #999;
	}
}
.filter-bar {
	background: #fff;
}

.avatar {
	height: 1.5em;
	mix-blend-mode: multiply;
	vertical-align: top;
	width: 1.5em;
}
[id="scope-image"] {
	display: none;
}

select {
	font-size: .8rem;
	vertical-align: text-bottom;
}

[id="loading"] {
	background: #000;
	bottom: 0;
	left: 0;
	opacity: 0;
	pointer-events: none;
	position: absolute;
	right: 0;
	top: 0;
	transition: opacity ease .3s .2s;
}
.loading [id="loading"] {
	opacity: .5;
	pointer-events: all;
}

form fieldset {
	border: none;
	padding: 0;
	legend {
		border-bottom: solid 1px #eee;
		width: 100%;
	}
	li {
		display: flex;
		margin-bottom: 1em;
	}
	label {
		flex: 1;
		a {
			margin-left: 1em;
			color: blue;
		}
		.note {
			color: #666;
			display: block;
			font-size: .8em;
		}
	}
	input {
		max-height: 2em;
	}
	output {
		font-size: .8em;
		text-align: right;
	}
}

[id="issue-list"] {
	position: relative;
	flex: 1;
}

.issue {
	font-size: .7em;
	padding: .5em;
	border: solid 1px #ccc;
	border-width: 1px 0;
	> div {
		display: flex;
		&:last-of-type {
			font-size: .8em;
			color: #ccc;
			margin: .5em 0;
		}
	}
	.issue-title {
		flex: 1;
	}
	.issue-time-container {
		meter.overtime::-webkit-meter-bar {
			background: linear-gradient(hsl(0, 87%, 67%), hsl(0, 93%, 80%) 20%, hsl(0, 80%, 43%) 45%, hsl(0, 80%, 43%) 55%, hsl(0, 87%, 67%));
		}
	}
	.issue-milestone:not(:empty) {
		border-right: solid 1px #ccc;
		padding-right: .5em;
	}
	.issue-labels {
		flex: 1;
	}
	.label {
		border-radius: 3px;
		color: #fff;
		font-size: .8em;
		margin: 0 .25em;
		padding: .1em .25em;
		text-shadow: 0 0 0 1px #000;
	}
}

.no-issues {
	bottom: 0;
	color: #ccc;
	font-style: italic;
	height: 1.1em;
	left: 0;
	margin:auto;
	position: absolute;
	right: 0;
	text-align: center;
	top: 0;
}