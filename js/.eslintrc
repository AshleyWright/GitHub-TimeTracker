{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [2, "tab"],
    "brace-style": [2, "1tbs"],
    "comma-style": [2, "last"],
    "default-case": 2,
    "func-style": [2, "declaration"],
    "guard-for-in": 2,
    "no-console": 0,
    "no-floating-decimal": 2,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-nested-ternary": 2,
    "no-undefined": 2,
    "quotes": [2, "single"],
    "radix": 2,
    "keyword-spacing": [2],
    "space-before-blocks": 2,
    "spaced-comment": [2, "always", { "exceptions": ["-"]}],
    "strict": [2, "global"],
    "valid-jsdoc": [2, { "prefer": { "return": "returns"}}],
    "wrap-iife": [2, "inside"]
  },
  "globals": {
    "_": false,
    "GitHub": false,
    "Stretchy": false
  }
}